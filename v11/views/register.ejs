<!DOCTYPE html>

<html>
	
	<head>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
		
		<style>
			.jumboH1 {
				color: steelblue;
			}
			
			input {
				text-align: center;
				margin-top: 15px;
				margin-bottom: 15px;
			}
			
			.submitBtn {
				width: 200px;
			}

			
		</style>
	</head>
	
	
	<body>
		
		<% if(successMessage && successMessage.length > 0) { %>
		<div class="alert alert-success">
			<%= successMessage %>
		</div>
		<% } %>
		
		<% if(errorMessage && errorMessage.length > 0) { %>
		<div class="alert alert-danger">
			<%= errorMessage %>
		</div>
		<% } %>
		
		<div class="jumbotron">
			<div class="d-flex justify-content-center">
				<h1 class="jumboH1">
					Welcome to the Registration Page!
				</h1>
			</div>
		</div>
			
			<form action="/register" method="POST">
				<div class="d-flex justify-content-center"><input name="username" placeholder="Enter a Username"></div>
				<div class="d-flex justify-content-center"><input name="password" placeholder="password"></div>
				<div class="d-flex justify-content-center"><button class="btn btn-success submitBtn" type="submit">Sign Up</button></div>
			</form>
		
		
	</body>
	
</html>